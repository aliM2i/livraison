<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Livraison{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    
        <!-- Custom CSS -->
        <link rel="stylesheet" href="{{ asset('css/shop-homepage.css') }}">
        
    </head>
    <body>
        
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                
               
                
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" style="font-size:60px;color:#1CF711" href="#">Fast and Glorious</a>
                </div>
                
                
                
                
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                
                    <ul class="nav navbar-nav navbar-right">
                        
                        {% if app.session.get('client').role is defined %}
                             <li><a>Bonjour {{ app.session.get('client').prenom }} {{ app.session.get('client').nom }}</a></li>
                        {% endif %}  
                        
                        {% if app.session.get('client') == 'admin' %}
                            
                            
                            <li><a href="{{ path('utilisateur_index') }}">Utilisateurs</a></li>
                            <li><a href="{{ path('course_index') }}">Courses</a></li>
                            <li><a href="{{ path('deconnexion') }}">Déconnexion</a></li>
                       
                        
                        {% elseif app.session.get('client').role is defined and app.session.get('client').role == 'ROLE_CLIENT' %}
                            
                            <li><a href="{{ path('ListeCoursesClients') }}">Liste des courses</a></li>
                             <li><a href="{{ path('deconnexion') }}">Déconnexion</a></li>
                            
                        {% elseif app.session.get('client').role is defined and app.session.get('client').role == 'ROLE_LIVREUR' %}
                             
                            <li><a href="{{ path('ListeCoursesLivreur') }}">Liste des courses</a></li>
                            <li><a href="{{ path('deconnexion') }}">Déconnexion</a></li>
                           
                        {% else %}   
                            
                            <li><a href="{{ path('app_inscription_inscription') }}">Inscription</a></li>
                            <li><a href="{{ path('app_connexion_connexion') }}">Connexion</a></li>
                            
                        {% endif %}  
                        
 
                      
                      
                    </ul>
                        
                        
                         <div class="row">
                    <div class="col-sm-12 text-center">
                    <img class="img-responsive text-center" width="150px" src="{{ asset('image/cycle.png') }}"  style="margin: auto;margin-top: -62px;">
                    </div>
                </div>
                    
                </div>
                <!-- /.navbar-collapse -->
            </div>
            <!-- /.container -->
        </nav>
        <div class="container">                
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
